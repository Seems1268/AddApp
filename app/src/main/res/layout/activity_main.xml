<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="add.tech.com.addapp.MainActivity">
    
    <EditText
        android:id="@+id/num1_edittxt"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:numeric="integer"
        android:inputType="number"
        android:maxLength="9"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/num2_edittxt"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:numeric="integer"
        android:inputType="number"
        android:maxLength="9"
        android:layout_below="@id/num1_edittxt"/>
    
    <Button
        android:id="@+id/cal_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/num2_edittxt"
        android:text="Calculate"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        />
    

    <TextView
        android:id="@+id/result_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cal_btn"
        android:textSize="15sp"
        android:layout_margin="20dp"/>
</RelativeLayout>
